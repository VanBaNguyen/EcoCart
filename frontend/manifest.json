{
  "manifest_version": 2,
  "name": "Simple Firefox Extension",
  "version": "1.0",
  "description": "A simple Firefox extension with a blank popup",
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Simple Extension",
    "default_icon": "logo.png"
  },
  
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "96": "logo.png",
    "128": "logo.png"
  },

  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "http://localhost:5057/*",
    "http://127.0.0.1:5057/*",
    "http://localhost:5060/*",
    "http://127.0.0.1:5060/*"
  ]
}